<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/question_text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="100dp"
        android:text="@string/question_workout_length"
        android:textAlignment="center"
        android:textSize="28sp" />

    <ListView
        android:id="@+id/user_input_multiple_choice"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_below="@id/question_text_view2"
        android:choiceMode="singleChoice" />


    <Button
        android:id="@+id/submit_input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_input_multiple_choice"
        android:layout_centerHorizontal="true"
        android:insetTop="12dp"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>