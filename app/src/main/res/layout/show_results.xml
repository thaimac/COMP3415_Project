<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3A3C3C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="General Recommendation:"
            android:textColor="#EFE8E8"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/routine_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/specifics_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/routine_overview"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#B5003D"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Your Personalized Plan:"
            android:textColor="#F1EEEE"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/workout_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/specifics_text"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>
</ScrollView>